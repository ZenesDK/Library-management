<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LibraryApp.ViewModels"
        x:Class="LibraryApp.Views.AuthorEditWindow"
        x:DataType="vm:AuthorEditViewModel"
        Title="{Binding Title}"
        Width="400" Height="300">
    
    <Design.DataContext>
        <vm:AuthorEditViewModel />
    </Design.DataContext>
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold"/>
        
        <TextBox Watermark="Имя" Text="{Binding FirstName}"/>
        <TextBox Watermark="Фамилия" Text="{Binding LastName}"/>
        <DatePicker SelectedDate="{Binding BirthDate}"/>
        <TextBox Watermark="Страна" Text="{Binding Country}"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Сохранить" Command="{Binding SaveCommand}"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>