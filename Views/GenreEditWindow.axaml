<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LibraryApp.ViewModels"
        x:Class="LibraryApp.Views.GenreEditWindow"
        x:DataType="vm:GenreEditViewModel"
        Title="{Binding Title}"
        Width="400" Height="250">
    
    <Design.DataContext>
        <vm:GenreEditViewModel />
    </Design.DataContext>
    
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold"/>
        
        <TextBox Watermark="Название жанра" Text="{Binding Name}"/>
        <TextBox Watermark="Описание" Text="{Binding Description}" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="80"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>